<?xml version="1.0" encoding="utf-8"?>

<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      internalLogLevel="Warn"
      throwExceptions="true"
      throwConfigExceptions="true"
      internalLogFile="nlog-internal.log">

    <!-- Enable asp.net core layout renderer -->
    <extensions>
        <add assembly="NLog.Web.AspNetCore" />
        <add assembly="NLog.Web.AspNetCore.Targets.Gelf" />
    </extensions>

    <!-- Exception layout -->
    <variable name="ExceptionHeader"
              value="------------------------------- E X C E P T I O N ------------------------------" />
    <variable name="ExceptionFooter"
              value="--------------------------------------------------------------------------------" />
    <variable name="ExceptionBody" value="${exception:format=toString,Data}" />
    <variable name="ExceptionLayout"
              value="${newline}${ExceptionHeader}${newline}${ExceptionBody}${newline}${ExceptionFooter}${newline}" />

    <!-- All properties layout -->
    <variable name="PropertiesHeader"
              value="------------------------------ P R O P E R T I E S -----------------------------" />
    <variable name="PropertiesFooter"
              value="--------------------------------------------------------------------------------" />
    <variable name="PropertiesLayout"
              value="${when:when=length('${all-event-properties}')>0:inner=${newline}${PropertiesHeader}${newline}${all-event-properties}${newline}}" />

    <!-- Targets -->
    <targets>
        <!-- Colored console  -->
        <target xsi:type="ColoredConsole"
                name="console"
                layout="${time}  ${level:uppercase=true:padding=-6}: ${logger} | ${message}${onexception:${newline}${ExceptionLayout}}${PropertiesLayout}">


            <!-- Adjust highlights -->
            <highlight-row condition="level==LogLevel.Trace" foregroundColor="Gray" />
            <highlight-row condition="level==LogLevel.Debug" foregroundColor="Gray" />
            <highlight-row condition="level==LogLevel.Info" foregroundColor="Gray" />
            <highlight-row condition="level==LogLevel.Warn" foregroundColor="Gray" />
            <highlight-row condition="level==LogLevel.Error" foregroundColor="White" />
            <highlight-row condition="level==LogLevel.Fatal" foregroundColor="White" />
            <highlight-word text="DEBUG" foregroundColor="Magenta" wholeWords="true" />
            <highlight-word text="INFO" foregroundColor="DarkGreen" wholeWords="true" />
            <highlight-word text="WARN" foregroundColor="DarkYellow" wholeWords="true" />
            <highlight-word text="ERROR" foregroundColor="DarkRed" wholeWords="true" />
            <highlight-word text="FATAL" foregroundColor="DarkRed" wholeWords="true" />

            <!-- Highlight running URL -->
            <highlight-word foregroundColor="DarkYellow" regex="Now listening on:(.)+" compileRegex="true" />

            <!-- Highlight time -->
            <highlight-word foregroundColor="Blue" regex="^\d{2}:\d{2}:\d{2}.\d{4}" compileRegex="true" />

            <!-- Highlight properties -->
            <highlight-word foregroundColor="DarkCyan" text="P R O P E R T I E S" />

            <!-- Highlight properties -->
            <highlight-word foregroundColor="Red" text="E X C E P T I O N" />

        </target>

        <!-- Graylog -->
        <target xsi:type="Gelf" 
                name="graylog" 
                endpoint="udp://graylog.gbworks.lan:12201" 
                facility="SplitV2"
                sendLastFormatParameter="true" 
                gelfVersion="1.1">

            <!-- Optional parameters -->
            <parameter name="param1" layout="${longdate}" />
            <parameter name="param2" layout="${callsite}" />
        </target>
    </targets>

    <!-- Rules -->
    <rules>
        <!-- Skip Microsoft noise -->
        <logger name="Microsoft.*" maxlevel="Debug" final="true" />

        <!--All logs -->
        <logger name="*" minlevel="Trace" writeTo="console, graylog" />
    </rules>
</nlog>